@model IEnumerable<ShopTARge23.Models.Kindergartens.KindergartenImageViewModel>
@{
    int rowNumber = 1;
}

<div>
    <a asp-action="Create" asp-controller="Kindergartens" class="btn btn-primary">Create</a>
</div>
<div class="h1">
    Kindergartens
</div>
<form method="post">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">Group name</th>
                <th scope="col">Children count</th>
                <th scope="col">Kindergarten's name</th>
                <th scope="col">Teacher</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var kindergarten in Model)
            {
                <tr>
                    <td>@rowNumber</td>
                    <td>@kindergarten.GroupName</td>
                    <td>@kindergarten.ChildrenCount</td>
                    <td>@kindergarten.KindergartenName</td>
                    <td>@kindergarten.Teacher</td>
                    <td>
                        <a asp-action="Details" asp-controller="Kindergartens" asp-route-id="@kindergarten.Id" class="btn btn-info">Details</a>
                        <a asp-action="Update" asp-controller="Kindergartens" asp-route-id="@kindergarten.Id" class="btn btn-primary">Update</a>
                        <a asp-action="Delete" asp-controller="Kindergartens" asp-route-id="@kindergarten.Id" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
                rowNumber += 1;
            }
        </tbody>
    </table>
</form>
